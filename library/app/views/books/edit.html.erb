<h1>Please Edit this book: <%= @book.name %></h1>


<%= form_tag(edit_book_path(@book.id), method: :patch) do %>
  <%= text_field_tag "book[name]", @book.name %>
  <%= submit_tag %>
<% end %>


<%= form_tag burn_book_path(id: @book.id), method: :delete do %>
<%= submit_tag "Burn Book to Ashes" %>
<% end %>
